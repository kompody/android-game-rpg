<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item android:state_enabled="true" app:state_liftable="true" app:state_lifted="false">
        <objectAnimator android:duration="150" android:propertyName="elevation" android:valueTo="0dp" android:valueType="floatType" />
    </item>

    <item android:state_enabled="true">
        <objectAnimator android:duration="150" android:propertyName="elevation" android:valueTo="@dimen/appbar_elevation" android:valueType="floatType" />
    </item>

    <item>
        <objectAnimator android:duration="0" android:propertyName="elevation" android:valueTo="0" android:valueType="floatType" />
    </item>
</selector>
