<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="tabStyle">@style/AppTheme.TabLayout.Tab</item>
        <item name="fontFamily">@font/museo_sans_cyrl_500</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- BottomNavigationView -->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- AppBar -->
    <style name="AppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:stateListAnimator">@drawable/appbar_state_list_animator</item>
    </style>

    <!-- Header text -->
    <style name="HeaderTextStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/color_toolbar_title</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <!-- Title Text -->
    <style name="TitleTextStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">@color/color_toolbar_title</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <!-- Primary Text -->
    <style name="PrimaryTextStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- Content Text -->
    <style name="ContentTextStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">@dimen/toolbar_padding_end</item>
    </style>

    <!-- Action Button -->
    <style name="AppTheme.Button.Action" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/action_button_padding</item>
        <item name="android:background">@drawable/ripple_dark_round</item>
    </style>

    <style name="AppTheme.Button.Navigation" parent="AppTheme.Button.Action">
        <item name="android:layout_margin">@dimen/navigation_button_margin</item>
    </style>

    <!-- Base Button -->
    <style name="BaseButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/button_padding_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_bottom</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="BaseButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">2dp</item>
        <item name="fontFamily">@font/museo_sans_cyrl_700</item>
    </style>

    <!-- Flat Button -->
    <style name="AppTheme.Button.Flat" parent="BaseButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_flat</item>
        <item name="fontFamily">@font/museo_sans_cyrl_700</item>
        <item name="android:radius">12dp</item>
    </style>

    <!-- Chip View -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="chipStrokeWidth">@dimen/chip_stroke_width</item>
        <item name="chipBackgroundColor">@color/color_chip_background</item>
        <item name="chipStrokeColor">@color/color_chip_stroke</item>
        <item name="android:textColor">@color/color_chip_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_draggable_background</item>
        <item name="android:paddingTop">@dimen/bottom_sheet_padding_top</item>
        <item name="android:paddingBottom">@dimen/bottom_sheet_padding_bottom</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
    </style>

    <style name="AppTheme.Dialog.Info" parent="AppTheme.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/info_dialog_text</item>
        <item name="android:windowTitleStyle">@style/AppTheme.Dialog.Info.Title</item>
        <item name="android:buttonBarButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
    </style>

    <style name="AppTheme.Dialog.Info.Title" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/info_dialog_text_title</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextInputLayout.Custom" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.TextInputLayout.ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/textError</item>
    </style>

    <style name="AppTheme.TextInputLayout.Auth" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.TextInputLayout.Auth.ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.EditText.Auth" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/museo_sans_cyrl_500</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">.05</item>
        <item name="android:maxLines">1</item>
        <item name="android:backgroundTint">@color/textHintLight</item>
    </style>

    <style name="AppTheme.TabLayout.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TextAppearance.TabLayout.Tab</item>
    </style>

    <style name="AppTheme.TextAppearance.TabLayout.Tab" parent="TextAppearance.Design.Tab"></style>

    <style name="AppTheme.Dialog.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Dialog.BottomSheet.Fullscreen" parent="AppTheme.Dialog.BottomSheet">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Custom.EditText" parent="AppTheme">
        <item name="colorError">@color/white</item>
        <item name="hintTextColor">@color/password_toggle_inactive</item>
        <item name="labelErrorTextColor">@color/custom_edit_text_label_error_text_color</item>
    </style>

    <style name="AppTheme.TextView.SignUp.Legal" parent="AppTheme">
        <item name="android:textColorLink">@color/textPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.Hashtag" parent="AppTheme">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Widget.FloatingActionButton" parent="AppTheme"></style>

    <style name="AppTheme.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton.Dialog
        </item>
    </style>
</resources>